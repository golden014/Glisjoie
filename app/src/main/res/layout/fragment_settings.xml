<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.SettingsFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/katibeh"
        android:gravity="center"
        android:text="@string/setting"
        android:textColor="@color/black"
        android:textSize="40dp" />

    <RelativeLayout
        android:id="@+id/credential_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="50dp"
        android:background="@color/light_gray"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/gear_logo_settings_page3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:layout_centerVertical="true"
            app:tint="@color/pink" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/gear_logo_settings_page3"
            android:fontFamily="@font/katibeh"
            android:text="@string/credential_setting"
            android:textSize="25dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/admin_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="50dp"
        android:background="@color/light_gray"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/gear_logo_settings_page2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:layout_centerVertical="true"
            app:tint="@color/pink" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin Setting"
            android:fontFamily="@font/katibeh"
            android:textSize="25dp"
            android:layout_toRightOf="@id/gear_logo_settings_page2"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/view_history_setting_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="50dp"
        android:background="@color/light_gray"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/gear_logo_settings_page4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:layout_centerVertical="true"
            app:tint="@color/transparent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/gear_logo_settings_page4"
            android:fontFamily="@font/katibeh"
            android:text="@string/view_history"
            android:textSize="25dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logout_setting"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="50dp"
        android:background="#FF6961"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/katibeh"
            android:text="@string/logout"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </RelativeLayout>

</LinearLayout>