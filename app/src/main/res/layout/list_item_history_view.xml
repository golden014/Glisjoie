<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="25dp">

    <ImageView
        android:id="@+id/book_image_history"
        android:layout_width="110dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:paddingVertical="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        >

        <TextView
            android:id="@+id/title_view_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/katibeh"
            android:text="@string/title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/author_view_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/katibeh"
            android:text="@string/author_name"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/date_view_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/katibeh"
            android:paddingTop="20dp"
            android:text="12/12/2023 4 A.M."
            android:textSize="20sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/single_delete_history_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_delete_outline_24"
        android:minWidth="25dp"
        android:minHeight="25dp"
        android:layout_gravity="center"
        android:padding="20dp"
        android:background="@color/white"/>


</LinearLayout>