<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.SettingsFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Credential Settings"
        android:fontFamily="@font/katibeh"
        android:textSize="40dp"
        android:textColor="@color/black"/>

    <RelativeLayout
        android:id="@+id/edit_email_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="50dp"
        android:background="@color/light_gray"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/gear_logo_settings_page3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:layout_centerVertical="true"
            app:tint="@color/pink" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/gear_logo_settings_page3"
            android:fontFamily="@font/katibeh"
            android:text="@string/update_email"
            android:textSize="25dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/update_password_setting_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingHorizontal="50dp"
        android:background="@color/light_gray"
        android:layout_marginBottom="20dp"
        >

        <ImageView
            android:id="@+id/gear_logo_settings_page2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_settings_24"
            android:layout_centerVertical="true"
            app:tint="@color/pink" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/gear_logo_settings_page2"
            android:fontFamily="@font/katibeh"
            android:text="Update Password"
            android:textSize="25dp" />

    </RelativeLayout>





</LinearLayout>